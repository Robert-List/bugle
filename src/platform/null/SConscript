#!/usr/bin/env python

import BugleChecks

Import('envs', 'srcdir', 'builddir', 'targets')

env['host'].Append(CPPPATH = [srcdir.Dir('platform/null')])

targets['bugleutils']['source'].extend(env['host'].SharedObject(source = [
    'string-null.c',
    'math-null.c',
    'io-null.c',
    'time-null.c'
    ])

targets['bugle']['source'].extend(envs['host'].SharedObject(source = [
    'dl-null.c'
    ])
