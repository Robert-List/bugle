#!/usr/bin/env python
Import('build_env', 'tu_env', 'env', 'api', 'platform_shared')

tu_env.Tu(['data/gl.o', 'data/gl.tu'], 'data/gl.c')

libbugleutils = env.SharedLibrary2(
        'bugleutils',
        [
            'gl/gltypes.c',
            'apireflect.c',
            'glwin/glwintypes.c',
            '../common/memory.c',
            '../common/protocol.c',
            '../common/protocol-win32.c',
            '../common/hashtable.c',
            '../common/linkedlist.c',
            '../common/io.c',
            '../budgielib/internal.c',
            '../budgielib/reflect.c',
            '../budgielib/tables.c',
            'apitables.c',
            api.bugleutils_sources,

            platform_shared
        ], version = '7.0.0')

libbugle = env.SharedLibrary2(
        'bugle',
        [
            env.CFile('confparse.y', YACCFLAGS = '-d')[0],
            'conflex.l',
            'interceptor.c',
            'dlopen.c',
            'filters.c',
            'stats.c',
            'statslex.l',
            env.CFile('statsparse.y', YACCFLAGS = '-d')[0],
            'log.c',
            'objects.c',
            'input.c',
            '../budgielib/addresses.c',
            '../budgielib/lib.c',
            'gl/glutils.c',
            'gl/glsl.c',
            'glwin/trackcontext.c',
            'gl/gldisplaylist.c',
            'gl/globjects.c',
            'gl/glextensions.c',
            'gl/glbeginend.c',
            api.gltype + '/gldump.c',
            api.gltype + '/glstate.c',
            api.glwin + '/glwin.c',
            api.bugle_sources
        ],
        version = '8.0.0',
        LIBPATH = ['../libltdl/.libs'],
        LIBS = [libbugleutils, 'ltdl', api.bugle_libs])

Export('libbugle', 'libbugleutils')
