#!/usr/bin/env python

Import('env', 'srcdir', 'builddir', 'libbugle', 'libbugleutils')

filter_env = env.Clone(
        LIBS = libbugle + libbugleutils,
        LINKFLAGS = '-Wl,-soname,${TARGET.file}',
        SHLIBPREFIX = '')

for filter in [
        'checks',
        'common',
        'debugger',
        'exe',
        'extoverride',
        'logstats',
        'modify',
        'showextensions',
        'showstats',
        'stats_basic',
        'stats_calls',
        'stats_calltimes',
        'stats_fragments',
        'stats_nv',
        'stats_primitives',
        'trace',
        'unwindstack',
        'validate']:
    filter_env.LoadableModule(filter, [filter + '.c'])

filter_env.LoadableModule('eps', ['eps.c', '../gl2ps/gl2ps.c'])
