#!/usr/bin/env python
import sys

sys.path.append('@srcdir@/site_scons')

ac_vars = {
        'srcdir': '@srcdir@',
        'libdir': '@libdir@',
        'host_os': '@host_os@',
        'PACKAGE': '@PACKAGE@'
        }
srcdir = Dir('@srcdir@')
builddir = Dir('.')

Export('ac_vars', 'srcdir', 'builddir')

SConscript(srcdir.File('SConscript'), variant_dir = builddir, duplicate = 0)
