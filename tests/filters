# Wireframe. We use this to test various things, mainly because it
# loads up various other filtersets (trackbeginend, trackcontext, etc).
chain wireframe
{
    filterset wireframe
    filterset error
}

chain trace
{
    filterset log
    {
        format "%f.%e: %m"
        stderr_level 4
        flush yes
    }
    filterset trace
    filterset error
}

chain triangles
{
    filterset stats_primitives
    filterset logstats
    {
        show "triangles per frame"
    }
    filterset log
    {
        format "%f.%e: %m"
        stderr_level 4
        flush yes
    }
}

chain checks
{
    filterset checks
    filterset log
    {
        format "%f.%e: %m"
        flush yes
    }
}
