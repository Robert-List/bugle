# Wireframe. We use this to test various things, mainly because it
# loads up various other filtersets (error, trackcontext, etc).
chain wireframe
{
    filterset wireframe
}

chain trace
{
    filterset log
    {
        flush yes
    }
    filterset trace
}

chain triangles
{
    filterset log
    {
        flush yes
    }
    filterset stats
    {
        triangles yes
    }
}
